@model UniversityManagementSystemMVCApp.Models.Department
@{
    ViewBag.Title = "Save Department";
}

@section Style
{
<link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Custom_CS.css" rel="stylesheet" />
<style>

    .field-validation-error {
        text-align: center;
        color: blue;
    }
    #wrapper {
        width: 60%;
        margin: 0 auto;
    }

    input {
        width: 240px;
    }
</style>
}

<div >
    <div id="wrapper">
        <hr />
        <h3 class="center">Save Department</h3>
        <hr />
        
        
        @using (Html.BeginForm(null, null, FormMethod.Post, new {id = "saveForm"}))
        {
            <div class="form-group">
                @Html.LabelFor(x => x.DepartmentCode,"Code", new { @class = "col-md-3 control-label" })
                @Html.TextBoxFor(x => x.DepartmentCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.DepartmentCode)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.DepartmentName,"Name", new { @class = "col-md-3 control-label" })
                @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.DepartmentName)
            </div>
            <div class="col-xs-11 space-vert">
                <input id="click" type="submit" value="Save" class="btn btn-success" />
            </div>

            <div class="col-lg-10">
                <h3 align="center">@ViewBag.Message</h3>
            </div>
            <hr/>
        }

