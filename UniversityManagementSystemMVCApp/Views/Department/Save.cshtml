            </div>
        </form>*@

    </div>
</div>
<hr/>
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#saveForm").validate({
                rules: {
                    DepartmentName: "required",
                    DepartmentCode: {
                        required: true,
                        minlength: 2,
                        maxlength: 7
                    }

                },
                messages: {
                    DepartmentName: "Please enter Department name",

                    DepartmentCode: {
                        required: "Please provide a Department Code",
                        minlength: "Your Department Code must be at least 2 characters long",
                        maxlength: "Your Department Code less then 7 characters long"
                    }
                }
            });

        });
    </script>

}
