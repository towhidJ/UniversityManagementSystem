@model IEnumerable<UniversityManagementSystemMVCApp.Models.NetClubAdvTB>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-info text-center">Advisor List</h2>
    </div>
    <div class="col-6 text-right">
        <a href="@Url.Action("Create","NetClubAdv")" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Add Advisor</a>
    </div>
</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JoinDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeacherTB.TeacherName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JoinDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherTB.TeacherName)
            </td>
            <td style="width: 150px">
                <div class="btn-group">
                    <a class="btn btn-primary" href="@Url.Action("Edit", "NetClubAdv", new {id = item.Id})"><i class="far fa-edit"></i></a>
                    <a class="btn btn-success" href="@Url.Action("Details", "NetClubAdv", new {id = item.Id})"><i class="fas fa-list-ul"></i></a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "NetClubAdv", new {id = item.Id})"><i class="fas fa-trash-alt"></i></a>
                </div>
            </td>
        </tr>
    }

</table>
