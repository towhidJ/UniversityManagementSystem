@using UniversityManagementSystemMVCApp.Models
@model Course
@{
    ViewBag.Title = "Save";
}
@section Style
{
<link href="~/Content/Custom_CS.css" rel="stylesheet" />
    <style>
        #errmsg {
            color: red;
        }

        .field-validation-error {
            text-align: center;
            color: red;
        }

        #wrapper {
            width: 50%;
            margin: 0 auto;
        }

        input {
            width: 240px;
        }
    </style>
}
<div id="wrapper" >
    <hr />
    <h3 class="text-center text-info">Add Course</h3>
    <hr />
    @using (Html.BeginForm(null, null, FormMethod.Post))
    {
            <div class="form-group">
                @Html.LabelFor(x => x.CourseCode, "Code", new {@class = "col-md-3 control-label"})
                @Html.TextBoxFor(x => x.CourseCode, new {@class = "form-control"})
                @Html.ValidationMessageFor(x => x.CourseCode)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.CourseName, "Name", new {@class = "col-md-3 control-label"})
                @Html.TextBoxFor(x => x.CourseName, new {@class = "form-control"})
                @Html.ValidationMessageFor(x => x.CourseName)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Credit, new {@class = "col-md-3 control-label"})
                @Html.TextBoxFor(x => x.Credit, new {@class = "form-control"})
                @Html.ValidationMessageFor(x => x.Credit)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Description, "Description ", new {@class = "col-md-3 control-label"})
                @Html.TextAreaFor(x => x.Description, new {@class = "form-control"})
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.DepartmentId, new {@class = "col-md-3 control-label"})
                @Html.DropDownListFor(x => x.DepartmentId, new SelectList(ViewBag.Departments, "Value", "Text"), new {@class = "form-control"})
                @Html.ValidationMessageFor(x => x.DepartmentId)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.SemesterId, new {@class = "col-md-3 control-label"})
                @Html.DropDownListFor(x => x.SemesterId, new SelectList(ViewBag.Semesters, "Value", "Text"), new {@class = "form-control"})
                @Html.ValidationMessageFor(x => x.SemesterId)
            </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" id="click" value="Save" class="btn btn-success" />
            </div>
        </div>


        <div class="center">
            <h3>@ViewBag.Message</h3>
        </div>
        <br/>
    }
</div>
<hr/>
@section scripts
{ 
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script> 
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
}
